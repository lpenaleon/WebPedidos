@model IEnumerable<WebPedidos.Models.PedidoDet>

@{
    ViewBag.Title = "Index";
}

<h2>Detalle de un Pedido</h2>

<p>
    @Html.ActionLink("Crear un Nuevo", "Create", new { }, new { @class = "btn btn-sm btn-primary" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Productos.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubTotal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Productos.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorUnit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubTotal)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id = item.idPedido }, new { @class = "btn btn-sm btn-success" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.idPedido }, new { @class = "btn btn-sm btn-default" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.idPedido }, new { @class = "btn btn-sm btn-danger" })
</td>
    </tr>
}

</table>
