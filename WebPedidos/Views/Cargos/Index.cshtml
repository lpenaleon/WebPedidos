@model IEnumerable<WebPedidos.Models.Cargo>

@{
    ViewBag.Title = "Index";
}

<h2>Cargo</h2>

<p>
    @Html.ActionLink("Crear un Nuevo", "Create", new { }, new { @class = "btn btn-sm btn-primary" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomCargo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomCargo)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id = item.idCargo },new { @class = "btn btn-sm btn-success" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.idCargo }, new { @class = "btn btn-sm btn-default" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.idCargo }, new { @class = "btn btn-sm btn-danger" })
        </td>
    </tr>
}

</table>
