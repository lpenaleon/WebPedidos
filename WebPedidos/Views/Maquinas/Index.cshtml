@model PagedList.IPagedList<WebPedidos.Models.Maquina>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}

<h2>Máquina</h2>

<p>
    @Html.ActionLink("Crear una Nueva", "Create", new { }, new { @class = "btn btn-sm btn-primary" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().NomMaquina)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomMaquina)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id = item.IdMaquina }, new { @class = "btn btn-sm btn-success" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.IdMaquina }, new { @class = "btn btn-sm btn-default" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.IdMaquina }, new { @class = "btn btn-sm btn-danger" })
        </td>
    </tr>
    }
</table>

<div class="col-md-2">
    Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
</div>
<div class="col-md-10">
    @Html.PagedListPager(Model, page => Url.Action("Index", new
{
    page,
    sortOrder =
        ViewBag.CurrentSort,
    currentFilter = ViewBag.CurrentFilter
}))
</div>
