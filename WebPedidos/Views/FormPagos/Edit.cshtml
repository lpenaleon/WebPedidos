@model WebPedidos.Models.FormPago

@{
    ViewBag.Title = "Edit";
}

<h2>Modificar una Forma de Pago</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>FormPago</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idFormPago)

        <div class="form-group">
            @Html.LabelFor(model => model.NomFPago, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomFPago, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomFPago, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" /> |
                @Html.ActionLink("Volver a la Lista", "Index", new { }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

