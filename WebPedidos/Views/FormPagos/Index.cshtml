@model IEnumerable<WebPedidos.Models.FormPago>

@{
    ViewBag.Title = "Index";
}

<h2>Forma de Pago</h2>

<p>
    @Html.ActionLink("Crear una Nueva", "Create", new { }, new { @class = "btn btn-sm btn-primary" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomFPago)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomFPago)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id = item.idFormPago }, new { @class = "btn btn-sm btn-success" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.idFormPago }, new { @class = "btn btn-sm btn-default" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.idFormPago }, new { @class = "btn btn-sm btn-danger" })
        </td>
    </tr>
}

</table>
