@model PagedList.IPagedList<WebPedidos.Models.Departamento>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<h2>Departamentos</h2>

<p>
    @Html.ActionLink("Crear un Nuevo", "Create",new { },new { @class = "btn btn-sm btn-primary" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().NomDepto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().indicativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomDepto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.indicativo)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id = item.idDepto },new { @class = "btn btn-xs btn-success" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.idDepto }, new { @class = "btn btn-xs btn-default" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.idDepto }, new { @class = "btn btn-xs btn-danger" })
        </td>
    </tr>
}
</table>
<div class="col-md-2">
    Página: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
</div>
<div class="col-md-10">
    @Html.PagedListPager(Model, page => Url.Action("Index", new
    {
        page,
        sortOrder = ViewBag.CurrentSort,
        currentFilter = ViewBag.CurrentFilter
    }))
</div>









