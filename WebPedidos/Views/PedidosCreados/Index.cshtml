@model IEnumerable<WebPedidos.Models.Pedido>
@{
    ViewBag.Title = "Index";
}
<h2>Pedidos en estado: Creado</h2>
<p></p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idPedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.NumIde)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FormPago.NomFPago)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaPedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiasCred)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.NomClie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormPago.NomFPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPedido)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiasCred)
            </td>
            <td>
                @Html.ActionLink("Cambiar Estado", "Edit", new { id = item.idPedido }, new { @class = "btn btn-xs btn-success" }) |
                @Html.ActionLink("Detalle", "Details", new { id = item.idPedido }, new { @class = "btn btn-xs btn-default" })
            </td>
        </tr>
    }
</table>