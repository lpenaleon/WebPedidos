@model IEnumerable<WebPedidos.Models.Estado>

@{
    ViewBag.Title = "Index";
}

<h2>Estado de Inventarios</h2>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@using (Html.BeginForm(null,null,FormMethod.Post))
{
    @Html.TextBox("IdPedido", null,new { @class="form-control", @placeholder="Digite el Id del pedido y presione ENTER"})
}

@if (Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.idPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEstado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdenEstado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
        </tr>


        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pedido.idPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEstado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrdenEstado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
        </tr>
        }


    </table>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {



        });
    </script>
}