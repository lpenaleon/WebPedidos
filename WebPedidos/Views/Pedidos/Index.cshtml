@model IEnumerable<WebPedidos.Models.Pedido>

@{
    ViewBag.Title = "Index";
}

<h2>Pedido</h2>

<p>
    @*@Html.ActionLink("Crear un Nuevo", "Create", new { }, new { @class = "btn btn-sm btn-primary" })*@
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idPedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clientes.NomClie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FormPagos.NomFPago)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.acumulado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IVA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dCred)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idPedido)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Clientes.NomClie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FormPagos.NomFPago)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.acumulado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IVA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dCred)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id = item.idPedido }, new { @class = "btn btn-sm btn-success" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.idPedido }, new { @class = "btn btn-sm btn-default" }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.idPedido }, new { @class = "btn btn-sm btn-danger" })
</td>
    </tr>
}

</table>
