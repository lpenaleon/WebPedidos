                @Html.EditorFor(model => model.acumulado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.acumulado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
